{
  "name": "@layerzerolabs/oft",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "packages/**",
    "config/"
  ],
  "scripts": {
    "build-prerequisite": "cd config; ([ -f keys.json ] || cp keys.json.example keys.json); ([ -f rpc.json ] || cp rpc.json.example rpc.json); ",
    "build": "$npm_execpath build-prerequisite; $npm_execpath workspaces foreach --all run build",
    "clean": "$npm_execpath workspaces foreach --all run clean",
    "test": "$npm_execpath workspaces foreach --all run test",
    ":ops": "cd packages/ops && $npm_execpath ops \"$@\"",
    ":cli": "cd packages/ops && $npm_execpath ts-node --transpile-only src/cli.ts \"$@\""
  },
  "devDependencies": {
    "@layerzerolabs/prettier-config-next": "^2.0.1",
    "@layerzerolabs/solhint-config": "^2.0.1",
    "prettier": "^3.1.0",
    "solhint": "^4.0.0",
    "typescript": "~5.2.2"
  },
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=18.12.0"
  }
}
